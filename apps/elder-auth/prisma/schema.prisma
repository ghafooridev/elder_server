generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

enum GenderEnum {
  MALE
  FEMALE
  NONE
}

enum RoleEnum {
  ADMIN
  ELDER
  CAREGIVER
}

model User {
  id              String     @id @default(cuid())
  firstName       String?
  lastName        String?
  avatar          String?
  nationalityCode String?    @unique()
  mobileNumber    String?    @unique()
  email           String?    @unique()
  password        String?
  gender          GenderEnum @default(NONE)
  role            RoleEnum   @default(ELDER)
  dateOfBirth     DateTime?
  enabled         Boolean    @default(true)

  caregiver Caregiver?
  elder     Elder?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mobileNumber])
  @@index([email])
}

model Elder {
  userId      String   @id
  drugAllergy String[]
  disease     String[]

  user User @relation(fields: [userId], references: [id])
}

model Caregiver {
  userId String @id
  MSN    String @unique()

  user User @relation(fields: [userId], references: [id])
}
