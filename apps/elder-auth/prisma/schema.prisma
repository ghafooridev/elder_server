generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma-clients/elder-auth"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

enum GenderEnum {
  MALE
  FEMALE
  NONE
}

enum RoleEnum {
  ADMIN
  ELDER
  CAREGIVER
}

model User {
  id              String     @id @default(cuid())
  firstName       String?
  lastName        String?
  avatar          String?
  nationalityCode String?    @unique()
  mobileNumber    String     @unique()
  email           String?    @unique()
  gender          GenderEnum
  role            RoleEnum
  dateOfBirth     DateTime?
  enabled         Boolean    @default(true)
}
